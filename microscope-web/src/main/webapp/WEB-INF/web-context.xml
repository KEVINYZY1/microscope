<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- 自动扫描且只扫描@Controller -->
	<context:component-scan base-package="com.vipshop.microscope.web.action" use-default-filters="false">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />
	</context:component-scan>

	<bean
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters">
			<list>
				<ref bean="mappingJsonpHttpMessageConverter" />
			</list>
		</property>
	</bean>
	
	<bean id="loggerInterception" class="com.vipshop.microscope.trace.interceptor.ControllerInterceptor" />

	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="interceptors">
            <list>
                <ref bean="loggerInterception"/>
            </list>
        </property>
    </bean>
	
	
	<bean id="mappingJsonpHttpMessageConverter"
		class="com.vipshop.microscope.web.jsonp.MappingJsonpHttpMessageConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>application/javascript;charset=UTF-8</value>
			</list>
		</property>
		<property name="prefixCallback" value="callback(" />
		<property name="suffixCallback" value=");" />
	</bean>


</beans>