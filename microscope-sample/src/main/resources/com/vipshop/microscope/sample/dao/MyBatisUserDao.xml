<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vipshop.microscope.sample.dao.MyBatisUserDao">
	
	<resultMap id="userList" type="User">
		<result column="name" property="name" />
		<result column="age" property="age" />
		<result column="adress" property="adress" />
		<result column="gender" property="gender" />
		<result column="height" property="height" />
		<result column="weight" property="weight" />
		<result column="education" property="education" />
	</resultMap>
	
	<insert id="insert" parameterType="User">
		insert into user
		(name, age, adress, gender, hight, weight, education)
		values
		(#{name},#{age},#{adress},#{gender},#{hight},#{weight},#{education})
	</insert>
	
	<select id="find" parameterType="User" resultMap="userList">
		select * from user
	</select>
	
	<update id="update">
		update user set name = "mahone"
	</update>
	
	<delete id="delete">
		delete from user where name = "mahone"
	</delete>
</mapper>